<section>
  <div
    style="
      background-color: cyan;
      height: 100vh;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0px 0px 10px #ccc;
    "
  >
    <div id="message-list">
      <!-- <% for(let i = 0;i < 5;i++){ %> <%- include('msg') %> <% } %> -->
    </div>
    <form>
      <div style="display: flex; align-items: center; margin-top: 20px;">
        <input
          type="text"
          id="message"
          style="
            flex: 1;
            padding: 10px;
            border-radius: 10px;
            border: none;
            outline: none;
          "
          placeholder="Type your message here..."
        />
        <button
          id="send-message"
          style="
            background-color: #4caf50;
            color: white;
            padding: 10px 20px;
            border-radius: 10px;
            border: none;
            cursor: pointer;
          "
        >
          Send
        </button>
      </div>
    </form>
  </div>
</section>
